{
  "name": "@changesets-bitbucket/root",
  "version": "0.0.9",
  "repository": "https://github.com/hoangnd25/changesets-bitbucket-cli",
  "author": "Hoang Nguyen",
  "license": "MIT",
  "bin": {
    "changesets-bitbucket": "dist/cli.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle  --sourcemap --platform=node --target=node12 --external:yargs --outfile=dist/cli.js",
    "release": "yarn build && changeset publish",
    "lint": "eslint --cache --color '**/*.{js,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@changesets/pre": "^1.0.7",
    "@changesets/read": "^0.5.0",
    "@changesets/types": "^4.0.1",
    "@manypkg/get-packages": "^1.1.1",
    "@types/fs-extra": "^9.0.13",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "axios": "^0.23.0",
    "esbuild": "^0.13.8",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^3.4.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.5",
    "mdast-util-to-string": "^2.0.0",
    "prettier": "^2.4.1",
    "remark-parse": "^7.0.1",
    "remark-stringify": "^7.0.3",
    "resolve-from": "^5.0.0",
    "semver": "^6.3.0",
    "typescript": "^4.4.4",
    "unified": "^8.3.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "eslintIgnore": [
    "dist"
  ]
}
