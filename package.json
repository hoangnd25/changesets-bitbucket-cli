{
  "name": "@changesets-bitbucket/root",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/hoangnd25/changesets-bitbucket-cli",
  "author": "Hoang Nguyen",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ],
    "distFilenameStrategy": "unscoped-package-name"
  },
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "build": "preconstruct build",
    "release": "yarn build && changeset publish",
    "lint": "eslint --cache --color '**/*.{js,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "test": "jest --passWithNoTests",
    "clean": "manypkg exec rm -rf node_modules && manypkg exec rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/cli": "^2.17.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "eslintIgnore": [
    "packages/**/*/dist/"
  ]
}
